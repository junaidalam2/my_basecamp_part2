<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mb-3">
    <div>
    <%= form.text_field :first_name, :class => "form-control w-25", :placeholder => "First name" %>
    </div>
  </div>
  <div class="row mb-3">
    <div>
    <%= form.text_field :last_name, :class => "form-control w-25", :placeholder => "Last name" %>
    </div>
  </div>
  <div class="row mb-3">
    <div>
    <%= form.text_field :position, :class => "form-control w-25", :placeholder => "Position" %>
    </div>
  </div>
  <div class="row mb-3">
    <div>
    <%= form.text_field :department, :class => "form-control w-25", :placeholder => "Department" %>
    </div>
  </div>
  <div class="row mb-3">
    <div>
    <%= form.text_field :email, :class => "form-control w-25", :placeholder => "Email" %>
    </div>
  </div>
  <div class="row mb-3">
    <div>
    <%= form.select :profile, [:user, :admin], {}, { class: "form-control w-25" } %>
    </div>
  </div>


  <div class="row mb-3">
    <div>
      <%= form.submit @submit_user_button_text, :class => 'btn btn-info text-white' %>
    </div>
  </div>

<% end %>
